<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101010">

        <TextView
            android:id="@+id/bannerRight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="#040404"/>

        <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/git_logo4" />
        <TextView
            android:id="@+id/repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner"
            android:paddingBottom="16sp"
            android:paddingLeft="32sp"
            android:text="Creating a repository"
            android:textColor="#ff6533"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/repo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repo"
            android:paddingLeft="16sp"
            android:text="-Go to https://github.com/"
            android:textColor="#ff6533"
            android:textSize="18sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/repo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repo1"
            android:paddingLeft="16sp"
            android:text="-Open an account "
            android:textColor="#ff6533"
            android:textSize="18sp"
            android:textStyle="italic"/>
    <TextView
        android:id="@+id/repo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repo2"
        android:paddingLeft="16sp"
        android:text="-Click on create a new repository"
        android:textColor="#ff6533"
        android:textSize="18sp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/repo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repo3"
        android:paddingLeft="16sp"
        android:text="-Choose repository name"
        android:textColor="#ff6533"
        android:textSize="18sp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/repo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repo4"
        android:paddingLeft="16sp"
        android:text="-Select the ‘public’ radio button"
        android:textColor="#ff6533"
        android:textSize="18sp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/repo6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repo5"
        android:paddingLeft="16sp"
        android:text="-Click create new repository button"
        android:textColor="#ff6533"
        android:textSize="18sp"
        android:textStyle="italic"/>

        <ImageButton
            android:id="@+id/btnPage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#101010"
            android:scaleType="centerCrop"
            android:src="@drawable/nextimg" />

        <ImageButton
            android:id="@+id/btnPage5Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/btnPage5"
            android:background="#101010"
            android:scaleType="centerCrop"
            android:src="@drawable/previmg"/>


    </RelativeLayout>



