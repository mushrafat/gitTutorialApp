<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101010">

        <TextView
            android:id="@+id/bannerRight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="#040404"/>

        <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/git_logo4" />
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bannerRight"
            android:layout_alignParentRight="true"
            android:text="GIT COMMAND"
            android:textColor="#ff6533"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dir_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner"
            android:paddingTop="16sp"
            android:paddingLeft="16sp"
            android:text="@string/mkdir_string"
            android:textColor="#ff6533"
            android:textSize="18sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/dir_spa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dir_sp"
            android:paddingBottom="6sp"
            android:paddingLeft="16sp"
            android:text="@string/mkdir_sec_string"
            android:textColor="#ff6533"
            android:textSize="18sp"
            android:textStyle="italic" />
        <ImageView
            android:id="@+id/imgPage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dir_spa"
            android:src="@drawable/cd3" />

        <ImageView
            android:id="@+id/img2Page5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPage5"
            android:src="@drawable/cd2"/>

        <ImageButton
            android:id="@+id/btnPage7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#101010"
            android:scaleType="centerCrop"
            android:src="@drawable/nextimg" />

        <ImageButton
            android:id="@+id/btnPage7Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/btnPage7"
            android:background="#101010"
            android:scaleType="centerCrop"
            android:src="@drawable/previmg"/>
    </RelativeLayout>



